{
    "env": {
        "browser": true
    },
    "globals": {
        "app": true,
        "$": true,
        "angular": true,
        "describe": true,
        "it": true,
        "beforeEach": true,
        "expect": true,
        "module": true,
        "inject": true,
        "require": true,
        "__dirname": true,
        "moment": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}